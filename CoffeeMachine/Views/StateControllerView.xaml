<UserControl x:Class="CoffeeMachineWPF.Views.StateControllerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CoffeeMachineWPF.Views"
             xmlns:converters="clr-namespace:CoffeeMachineWPF.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.Resources>
        <!-- Локальные конвертеры -->
        <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <converters:NotificationVisibilityConverter x:Key="NotificationVisibilityConverter"/>
        <converters:HasCriticalNotificationsConverter x:Key="HasCriticalNotificationsConverter"/>
        <converters:HasWarningNotificationsConverter x:Key="HasWarningNotificationsConverter"/>
        <converters:HasInfoNotificationsConverter x:Key="HasInfoNotificationsConverter"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">

            <!-- ЗАГОЛОВОК -->
            <TextBlock Text="Логический контроллер состояний кофейной машины"
                      FontSize="20" 
                      FontWeight="Bold"
                      Foreground="#2C3E50"
                      Margin="0,0,0,15"/>

            <!-- ТЕКУЩИЙ РЕЖИМ -->
            <GroupBox Header="Текущий режим работы" 
                     Padding="15"
                     Margin="0,0,0,15">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding CurrentModeDisplay}"
                              FontSize="16"
                              FontWeight="Bold"
                              Foreground="{Binding StatusColor}"
                              VerticalAlignment="Center"/>
                    <Button Content="🔄 Обновить статус"
                           Command="{Binding AnalyzeStateCommand}"
                           Background="#3498DB"
                           Foreground="White"
                           Padding="10,5"
                           BorderThickness="0"
                           VerticalAlignment="Center"
                           Margin="20,0,0,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#3498DB"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#2980B9"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </GroupBox>

            <!-- ЛОГИЧЕСКИЕ ПЕРЕМЕННЫЕ -->
            <GroupBox Header="Логические переменные состояния" 
         Padding="15"
         Margin="0,0,0,15">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Столбец 1 -->
                        <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                            <CheckBox IsChecked="{Binding CurrentStatus.HasWater}" IsEnabled="False" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="HasWater (есть вода)" VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                            <CheckBox IsChecked="{Binding CurrentStatus.HasCoffee}" IsEnabled="False" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="HasCoffee (есть кофе)" VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Grid.Column="0" Grid.Row="2" Orientation="Horizontal">
                            <CheckBox IsChecked="{Binding CurrentStatus.HasCups}" IsEnabled="False" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="HasCups (есть стаканчики)" VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Столбец 2 -->
                        <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                            <CheckBox IsChecked="{Binding CurrentStatus.HasMilk}" IsEnabled="False" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="HasMilk (есть молоко)" VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                            <CheckBox IsChecked="{Binding CurrentStatus.IsHeated}" IsEnabled="False" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="IsHeated (нагрета)" VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Grid.Row="2" Orientation="Horizontal">
                            <CheckBox IsChecked="{Binding CurrentStatus.IsClean}" IsEnabled="False" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="IsClean (чистая)" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>

                    <!-- Формула CanOperate -->
                    <Border Background="#F8F9FA" BorderBrush="#DEE2E6" BorderThickness="1" 
               Margin="0,15,0,0" Padding="10">
                        <StackPanel>
                            <TextBlock Text="Формула CanOperate:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBlock Text="CanOperate = HasWater ∧ HasCoffee ∧ HasCups ∧ IsHeated ∧ IsClean" 
                          FontFamily="Consolas" FontSize="12"/>
                            <TextBlock Text="{Binding CurrentStatus.CanOperate, StringFormat='Результат: {0}'}" 
                          FontWeight="Bold" 
                          Foreground="{Binding CurrentStatus.CanOperate, Converter={StaticResource BoolToColorConverter}}"
                          Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </GroupBox>

            <!-- УВЕДОМЛЕНИЯ -->
            <GroupBox Header="Уведомления системы" 
                     Padding="15"
                     Margin="0,0,0,15">
                <StackPanel>

                    <!-- Критические уведомления -->
                    <Border Background="#FFEBEE" BorderBrush="#F44336" BorderThickness="1" Padding="10" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="КРИТИЧЕСКИЕ" FontWeight="Bold" Foreground="#C62828" Margin="0,0,0,5"/>
                            <ItemsControl ItemsSource="{Binding CurrentStatus.Notifications}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" 
                                                  Foreground="#D32F2F"
                                                  Margin="10,2,0,2"
                                                  Visibility="{Binding ., Converter={StaticResource NotificationVisibilityConverter}, ConverterParameter=CRITICAL}"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <TextBlock Text="Нет критических уведомлений" 
                                      Foreground="#757575" FontStyle="Italic"
                                      Visibility="{Binding CurrentStatus.Notifications, Converter={StaticResource HasCriticalNotificationsConverter}}"/>
                        </StackPanel>
                    </Border>

                    <!-- Предупреждения -->
                    <Border Background="#FFF3E0" BorderBrush="#FF9800" BorderThickness="1" Padding="10" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="ПРЕДУПРЕЖДЕНИЯ" FontWeight="Bold" Foreground="#EF6C00" Margin="0,0,0,5"/>
                            <ItemsControl ItemsSource="{Binding CurrentStatus.Notifications}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" 
                                                  Foreground="#F57C00"
                                                  Margin="10,2,0,2"
                                                  Visibility="{Binding ., Converter={StaticResource NotificationVisibilityConverter}, ConverterParameter=WARNING}"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <TextBlock Text="Нет предупреждений" 
                                      Foreground="#757575" FontStyle="Italic"
                                      Visibility="{Binding CurrentStatus.Notifications, Converter={StaticResource HasWarningNotificationsConverter}}"/>
                        </StackPanel>
                    </Border>

                    <!-- Информационные уведомления -->
                    <Border Background="#E3F2FD" BorderBrush="#2196F3" BorderThickness="1" Padding="10">
                        <StackPanel>
                            <TextBlock Text="ИНФОРМАЦИОННЫЕ" FontWeight="Bold" Foreground="#1565C0" Margin="0,0,0,5"/>
                            <ItemsControl ItemsSource="{Binding CurrentStatus.Notifications}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" 
                                                  Foreground="#1976D2"
                                                  Margin="10,2,0,2"
                                                  Visibility="{Binding ., Converter={StaticResource NotificationVisibilityConverter}, ConverterParameter=INFO}"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <TextBlock Text="Нет информационных уведомлений" 
                                      Foreground="#757575" FontStyle="Italic"
                                      Visibility="{Binding CurrentStatus.Notifications, Converter={StaticResource HasInfoNotificationsConverter}}"/>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </GroupBox>

            <!-- КНОПКИ УПРАВЛЕНИЯ -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                <Button Content="🔍 Анализировать состояние" 
                       Command="{Binding AnalyzeStateCommand}"
                       Background="#3498DB"
                       Foreground="White"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Padding="20,12"
                       BorderThickness="0"
                       Margin="0,0,10,0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#3498DB"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2980B9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="🔄 Симулировать переходы" 
                       Command="{Binding SimulateTransitionsCommand}"
                       Background="#9B59B6"
                       Foreground="White"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Padding="20,12"
                       BorderThickness="0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#9B59B6"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#8E44AD"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>

            <!-- ОБЛАСТЬ РЕЗУЛЬТАТОВ АНАЛИЗА -->
            <GroupBox Header="Полный анализ состояния" 
                     Padding="15">
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                             MaxHeight="400">
                    <TextBox Text="{Binding StateAnalysisReport}" 
                            IsReadOnly="True"
                            TextWrapping="Wrap"
                            FontFamily="Consolas"
                            FontSize="11"
                            BorderThickness="0"
                            Background="Transparent"
                            VerticalScrollBarVisibility="Auto"/>
                </ScrollViewer>
            </GroupBox>

        </StackPanel>
    </ScrollViewer>
</UserControl>
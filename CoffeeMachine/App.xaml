<Application x:Class="CoffeeMachineWPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CoffeeMachineWPF"
             xmlns:vm="clr-namespace:CoffeeMachineWPF.ViewModels"
             xmlns:views="clr-namespace:CoffeeMachineWPF.Views">
    <Application.Resources>
        <DataTemplate DataType="{x:Type vm:MakeCoffeeVM}">
            <views:MakeCoffeeView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:AdditionIngredientsVM}">
            <views:AdditionIngredientsView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:MaintenanceServiceVM}">
            <views:MaintenanceServiceView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:CycleAnalysisVM}">
            <views:CycleAnalysisView />
        </DataTemplate>
    </Application.Resources>
</Application>
<UserControl x:Class="CoffeeMachineWPF.Views.MakeCoffeeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CoffeeMachineWPF.Views"
             xmlns:vm="clr-namespace:CoffeeMachineWPF.ViewModels"
             xmlns:converters="clr-namespace:CoffeeMachineWPF.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="600">

    <UserControl.Resources>
        <converters:PreConditionColorConverter x:Key="PreConditionColorConverter"/>
        <converters:PostConditionColorConverter x:Key="PostConditionColorConverter"/>
        <converters:CoffeeTypeConverter x:Key="CoffeeTypeConverter"/>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVisibility"/>

        <Style x:Key="IndicatorStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <Style x:Key="PreConditionStyle" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding}" Value="True">
                    <Setter Property="Foreground" Value="Green"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding}" Value="False">
                    <Setter Property="Foreground" Value="Red"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <!-- Заголовок -->
            <TextBlock Text="{Binding OperationName}" 
                      FontSize="20" 
                      FontWeight="Bold"
                      Foreground="#333"
                      Margin="0,0,0,20"/>

            <!-- Блок WP-анализа -->
            <GroupBox Header="WP-анализ алгоритмов (ЛР-2)" FontWeight="SemiBold" Margin="0,0,0,15">
                <StackPanel Margin="10">
                    <Button Content="Анализировать алгоритм" 
               Command="{Binding AnalyzeAlgorithmCommand}"
               Background="#9C27B0"
               Foreground="White"
               FontSize="12"
               FontWeight="Bold"
               Padding="15,8"
               Margin="0,0,0,10"/>

                    <Border BorderBrush="#DDD" BorderThickness="1" Background="#FAFAFA" 
                            CornerRadius="5" Padding="10" MaxHeight="300">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <TextBlock Text="{Binding AnalysisReport}" 
                                       FontFamily="Segoe UI"
                                       FontSize="12"
                                       TextWrapping="Wrap"/>
                        </ScrollViewer>
                    </Border>
                </StackPanel>
            </GroupBox>
            <!-- Статус машины -->
            <GroupBox Header="Статус кофемашины" FontWeight="SemiBold" Margin="0,0,0,15">
                <StackPanel Margin="10">
                    <Border Background="{Binding StatusColor}" 
                           CornerRadius="5" 
                           Padding="10,8"
                           BorderThickness="0">
                        <TextBlock Text="{Binding MachineStatus}" 
                                  Foreground="White"
                                  FontWeight="Bold"
                                  FontSize="12"
                                  HorizontalAlignment="Center"/>
                    </Border>

                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="{Binding CurrentWasteLevel, StringFormat='Отходы: {0}%'}" 
                                      FontSize="11"/>
                            <TextBlock Text="{Binding WearLevel, StringFormat='Износ: {0:F1}%'}" 
                                      FontSize="11"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="{Binding ComponentsHealth, StringFormat='Здоровье: {0}%'}" 
                                      FontSize="11"/>
                            <TextBlock Text="{Binding NeedsMaintenance, StringFormat='Обслуживание: {0}'}" 
                                      FontSize="11"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </GroupBox>

            <!-- Выбор кофе -->
            <GroupBox Header="Выбор напитка" FontWeight="SemiBold" Margin="0,0,0,15">
                <StackPanel Margin="10">
                    <ComboBox ItemsSource="{Binding AvailableCoffeeTypes}"
                             SelectedItem="{Binding SelectedCoffeeType}"
                             Height="35"
                             FontSize="14">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={StaticResource CoffeeTypeConverter}}" Margin="5"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!-- Информация о рецепте -->
                    <StackPanel Margin="0,10,0,0" 
                               Visibility="{Binding SelectedCoffeeType, Converter={StaticResource BoolToVisibility}}">
                        <TextBlock Text="{Binding CurrentRecipe.Description}" 
                                  FontStyle="Italic"
                                  Foreground="#666"
                                  TextWrapping="Wrap"/>

                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="Вода: " FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding CurrentRecipe.RequiredWater}" FontWeight="SemiBold" Foreground="Blue"/>
                            <TextBlock Text="мл" Margin="5,0,15,0"/>

                            <TextBlock Text="Кофе: " FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding CurrentRecipe.RequiredCoffee}" FontWeight="SemiBold" Foreground="Brown"/>
                            <TextBlock Text="г" Margin="5,0,15,0"/>

                            <TextBlock Text="Молоко: " FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding CurrentRecipe.RequiredMilk}" FontWeight="SemiBold" Foreground="LightBlue"/>
                            <TextBlock Text="мл" Margin="5,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- Настройки напитка -->
            <GroupBox Header="Настройки напитка" FontWeight="SemiBold" Margin="0,0,0,15">
                <StackPanel Margin="10">
                    <!-- Уровень сахара -->
                    <TextBlock Text="Уровень сахара:" 
                              FontWeight="Normal"
                              Margin="0,0,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Slider Grid.Column="0"
                               Minimum="0" 
                               Maximum="5"
                               Value="{Binding SugarLevel}"
                               TickFrequency="1" 
                               IsSnapToTickEnabled="True"
                               TickPlacement="BottomRight"
                               Margin="0,0,10,0"/>

                        <TextBox Grid.Column="1"
                                Text="{Binding SugarLevel}"
                                Width="40"
                                VerticalAlignment="Center"/>
                    </Grid>

                    <!-- Добавить молоко -->
                    <CheckBox Content="Добавить молоко" 
                             IsChecked="{Binding AddMilk}"
                             FontWeight="Normal"
                             Margin="0,15,0,0"/>
                </StackPanel>
            </GroupBox>

            <!-- Время приготовления -->
            <GroupBox Header="⏱️ Время приготовления" FontWeight="SemiBold" Margin="0,0,0,15">
                <StackPanel Margin="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Расчетное время:" 
                      FontWeight="Normal" VerticalAlignment="Center"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" 
                      Text="{Binding EstimatedBrewTime, StringFormat={}{0:F1} сек}"
                      FontWeight="Bold" Foreground="#2196F3"
                      Margin="10,0,0,0"/>

                        <!-- Прогресс бар приготовления -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                       Margin="0,10,0,0"
                       Visibility="{Binding IsBrewingInProgress, Converter={StaticResource BoolToVisibility}}">
                            <TextBlock Text="{Binding BrewStatus}" 
                          FontSize="11" FontWeight="SemiBold"
                          Margin="0,0,0,5"/>
                            <ProgressBar Value="{Binding CurrentBrewProgress}"
                            Height="15"
                            Background="#E0E0E0"
                            BorderThickness="1"
                            BorderBrush="#BDBDBD">
                                <ProgressBar.Foreground>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#4CAF50" Offset="0"/>
                                        <GradientStop Color="#8BC34A" Offset="0.5"/>
                                        <GradientStop Color="#CDDC39" Offset="1"/>
                                    </LinearGradientBrush>
                                </ProgressBar.Foreground>
                            </ProgressBar>
                        </StackPanel>

                        <!-- Факторы влияния на время -->
                        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
                       Margin="0,10,0,0"
                       Background="#F5F5F5">
                            <TextBlock Text="Факторы влияния на время:" 
                          FontSize="11" FontWeight="Bold" Margin="0,0,0,3"/>
                            <TextBlock Text="{Binding SelectedCoffeeType, StringFormat='• Тип кофе: {0}'}" 
                          FontSize="10" Margin="5,1"/>
                            <TextBlock Text="{Binding SugarLevel, StringFormat='• Сахар: {0} порций'}" 
                          FontSize="10" Margin="5,1"/>
                            <TextBlock Text="{Binding AddMilk, StringFormat='• Молоко: {0}'}" 
                          FontSize="10" Margin="5,1"/>
                            <TextBlock Text="{Binding WearLevel, StringFormat='• Износ машины: {0:F1}%'}" 
                          FontSize="10" Margin="5,1"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </GroupBox>
            <!-- Предусловия -->
            <GroupBox Header="Проверка предусловий" FontWeight="SemiBold" Margin="0,0,0,15">
                <StackPanel Margin="10">
                    <StackPanel>
                        <!-- Базовые предусловия из родительского класса -->
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <TextBlock Text="• " FontWeight="Bold"/>
                            <TextBlock Text="Машина не сломана: " Style="{StaticResource PreConditionStyle}"/>
                            <TextBlock Text="{Binding IsNotBroken}" Style="{StaticResource PreConditionStyle}" FontWeight="Bold"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <TextBlock Text="• " FontWeight="Bold"/>
                            <TextBlock Text="Машина не готовит: " Style="{StaticResource PreConditionStyle}"/>
                            <TextBlock Text="{Binding IsNotMakingCoffee}" Style="{StaticResource PreConditionStyle}" FontWeight="Bold"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <TextBlock Text="• " FontWeight="Bold"/>
                            <TextBlock Text="Уровень отходов не критический: " Style="{StaticResource PreConditionStyle}"/>
                            <TextBlock Text="{Binding WasteLevelNotCritical}" Style="{StaticResource PreConditionStyle}" FontWeight="Bold"/>
                        </StackPanel>

                        <!-- Специфические предусловия -->
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <TextBlock Text="• " FontWeight="Bold"/>
                            <TextBlock Text="Достаточно воды: " Style="{StaticResource PreConditionStyle}"/>
                            <TextBlock Text="{Binding HasEnoughWater}" Style="{StaticResource PreConditionStyle}" FontWeight="Bold"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <TextBlock Text="• " FontWeight="Bold"/>
                            <TextBlock Text="Достаточно кофе: " Style="{StaticResource PreConditionStyle}"/>
                            <TextBlock Text="{Binding HasEnoughCoffee}" Style="{StaticResource PreConditionStyle}" FontWeight="Bold"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <TextBlock Text="• " FontWeight="Bold"/>
                            <TextBlock Text="Достаточно молока: " Style="{StaticResource PreConditionStyle}"/>
                            <TextBlock Text="{Binding HasEnoughMilk}" Style="{StaticResource PreConditionStyle}" FontWeight="Bold"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <TextBlock Text="• " FontWeight="Bold"/>
                            <TextBlock Text="Есть стаканчики: " Style="{StaticResource PreConditionStyle}"/>
                            <TextBlock Text="{Binding HasCups}" Style="{StaticResource PreConditionStyle}" FontWeight="Bold"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <TextBlock Text="• " FontWeight="Bold"/>
                            <TextBlock Text="Достаточно сахара: " Style="{StaticResource PreConditionStyle}"/>
                            <TextBlock Text="{Binding HasSugar}" Style="{StaticResource PreConditionStyle}" FontWeight="Bold"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Индикатор предусловий -->
                    <Border Margin="0,10,0,0" 
                           Background="{Binding PreConditionsMet, Converter={StaticResource PreConditionColorConverter}}"
                           Style="{StaticResource IndicatorStyle}">
                        <TextBlock Text="{Binding PreConditionsMet, StringFormat='Все предусловия выполнены: {0}'}" 
                                  Foreground="White"
                                  FontWeight="Bold"/>
                    </Border>
                </StackPanel>
            </GroupBox>

            <!-- Кнопка выполнения -->
            <Button Content="ПРИГОТОВИТЬ КОФЕ" 
                   Command="{Binding MakeCoffeeCommand}"
                   IsEnabled="{Binding PreConditionsMet}"
                   Background="#4CAF50"
                   Foreground="White"
                   FontSize="14"
                   FontWeight="Bold"
                   Padding="20,12"
                   BorderThickness="0"
                   Cursor="Hand"
                   Margin="0,0,0,15">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                        <Style.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#cccccc"/>
                                <Setter Property="Foreground" Value="#666666"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Постусловие -->
            <GroupBox Header="Результат выполнения" FontWeight="SemiBold">
                <StackPanel Margin="10">
                    <Border Background="{Binding PostConditionMet, Converter={StaticResource PostConditionColorConverter}}"
                           Style="{StaticResource IndicatorStyle}">
                        <TextBlock Text="{Binding PostConditionMet, StringFormat='Напиток приготовлен успешно: {0}'}" 
                                  Foreground="White"
                                  FontWeight="Bold"/>
                    </Border>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</UserControl>